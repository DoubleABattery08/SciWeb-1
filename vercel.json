{
  "version": 2,
  "builds": [
    {
      "src": "main.py", 
      "use": "@vercel/python"
    },
    {
      "src": "static/*",  
      "use": "@vercel/static"
    },
    {
      "src": "templates/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/endpoint", 
      "dest": "main.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/templates/(.*)",
      "dest": "templates/$1"
    },
    {
      "handle": "filesystem" 
    }
  ],
  "functions": {
    "api": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}


